            <input type="text" id="merchant-name" name="merchant-name">

            <label for="agency-number">Agency Number:</label>
            <input type="text" id="agency-number" name="agency-number" title="4 character Agency ID - Found on the Intranet">

            <label for="email">Email:</label>
